<h1>OrderItems#index</h1>
<p>Find me in app/views/order_items/index.html.erb</p>


<ul>
  <% @order_items.each do |order_item| %>
    <li>
      <%= link_to order_item.product.name, order_item_path(order_item) %> <%= order_item.quantity %>x
    </li>
  <% end %>
</ul>

<%= form_with(url: checkout_order_items_path, method: :post) do |form| %>
  <%= form.submit "Checkout" %>
<% end %>
